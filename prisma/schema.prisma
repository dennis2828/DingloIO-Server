generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  username      String    @unique
  email         String    @unique
  password      String?
  provider      PROVIDERS @default(EMAIL)
  isInvited     Boolean   @default(false)
  invitedBy     String?
  invitations   String[]
  uniqueFeature Boolean   @default(false)
  newsletter    String?
  projects      Project[]
}

model Project {
  id            String         @id @default(uuid())
  projectName   String
  password      String
  api_key       String         @unique
  userId        String
  disabled      Boolean        @default(false)
  agentName     String
  agentImage    String 
  predefinedAnswers PredefinedAnswer[] 


  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  conversations Conversation[]
}

model PredefinedAnswer {
  id String @id @default(uuid())
  projectId String
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  question String
  answer String

}

model Conversation {
  connectionId String    @id @unique
  projectId    String
  online       Boolean   @default(true)
  project      Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  messages     Message[]
}

model Message {
  id             String       @id @default(uuid())
  message        String
  isAgent        Boolean
  messagedAt     String
  automated      Boolean  @default(false)
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [connectionId], onDelete: Cascade)
}

enum PROVIDERS {
  EMAIL
  GOOGLE
  GITHUB
}